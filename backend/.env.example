# Database Configuration for Docker
DATABASE_URL="postgresql://<USUARIO>:<SENHA>@<HOST>:<PORTA>/<NOME_DO_BANCO>?schema=public"

# JWT Configuration
# Chave secreta para assinar tokens JWT (use uma string forte e segura)
JWT_SECRET="your-jwt-secret-key"
# Tempo de expiração do token JWT (ex.: '7d', '1h', '30m')
JWT_EXPIRES_IN="7d"

# Server Configuration
# Porta onde o servidor backend será executado
PORT=3001
# Ambiente de execução: development ou production
NODE_ENV="development"

# CORS Configuration
# URL do frontend autorizado a acessar a API
CORS_ORIGIN="http://localhost:3000"

# Rate Limiting
# Janela de tempo para o rate limiting em milissegundos (ex.: 900000 = 15 min)
RATE_LIMIT_WINDOW_MS=900000
# Número máximo de requisições permitidas por IP dentro da janela de tempo
RATE_LIMIT_MAX_REQUESTS=100
